{
  "include": ["@types/**/*.ts", "src/**/*.ts", "tests/**/*.ts"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,

    "outDir": "./dist",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "rootDir": ".", // so buld will generate also /src dir in output dir
    "typeRoots": ["node_modules/@types", "@types"]
  }
}
